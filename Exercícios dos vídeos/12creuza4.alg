algoritmo "Nome do Programa"

var
customuamba, taxacao, valortaxado: real


inicio
    escreva("Meus valores de muamba são R$")
        leia(customuamba)
        escreval(customuamba)

    taxacao <- customuamba * 0.60
    valortaxado <- taxacao + customuamba

    escreva("Meu custo total então, será: R$", valortaxado:5:2)


fimalgoritmo