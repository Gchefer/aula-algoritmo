algoritmo "Nome do Programa"

var
b, bj: inteiro

inicio

escreva("bota ")
leia(b)
    escreval(b)
    se (b<>10) entao
    escolha b
        caso 0 
        bj<-b+0
        caso 1
        bj<- b+2
        caso 2
        bj<- b+4
    fimescolha
    senao
        bj<-b
    fimse

    escreval(bj)

fimalgoritmo